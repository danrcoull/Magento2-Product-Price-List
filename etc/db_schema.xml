<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table comment="suttonsilver_pricelists_pricelist Table" engine="innodb" name="suttonsilver_pricelists_pricelist"
           resource="default">
        <column comment="Entity Id" identity="true" name="pricelist_id" nullable="false" padding="6" unsigned="true"
                xsi:type="smallint"/>
        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="pricelist_id"/>
        </constraint>
        <column length="50" name="name" nullable="true" xsi:type="varchar"/>
        <column name="description" nullable="true" xsi:type="text"/>
    </table>
    <table comment="suttonsilver_pricelists_pricelistcustomers Table" engine="innodb"
           name="suttonsilver_pricelists_pricelistcustomers" resource="default">
        <column comment="Entity Id" identity="true" name="pricelistcustomers_id" nullable="false" padding="6"
                unsigned="false" xsi:type="smallint"/>
        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="pricelistcustomers_id"/>
        </constraint>
        <column name="price_list_id" nullable="false" padding="6" unsigned="true" xsi:type="smallint"/>
        <column name="price_list_customer_id" nullable="false" padding="6" unsigned="true" xsi:type="smallint"/>

        <index referenceId="PRICE_LIST_ID" indexType="btree">
            <column name="price_list_id"/>
        </index>
        <index referenceId="CUSTOMER_ID" indexType="btree">
            <column name="price_list_customer_id"/>
        </index>

    </table>
    <table comment="suttonsilver_pricelists_pricelistproducts Table" engine="innodb"
           name="suttonsilver_pricelists_pricelistproducts" resource="default">
        <column comment="Entity Id" identity="true" name="pricelistproducts_id" nullable="false" padding="6"
                unsigned="false" xsi:type="smallint"/>
        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="pricelistproducts_id"/>
        </constraint>
        <column name="price_list_id" nullable="false" padding="6" unsigned="true" xsi:type="smallint"/>
        <column name="price_list_product_id" nullable="false" padding="6" unsigned="true" xsi:type="smallint"/>
        <column name="price_list_product_price" nullable="false" xsi:type="float"/>
        <column name="price_list_product_rule_type" nullable="false" default="price" xsi:type="varchar" length="8" comment="price/discount"/>

        <index referenceId="PRICE_LIST_ID" indexType="btree">
            <column name="price_list_id"/>
        </index>
        <index referenceId="PRODUCT_ID" indexType="btree">
            <column name="price_list_product_id"/>
        </index>

    </table>
</schema>
